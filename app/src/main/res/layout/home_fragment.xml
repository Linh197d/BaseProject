<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/custom_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/cstlayout1"
    >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnalarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:id="@+id/count_notify"
                android:layout_gravity="start"
                android:paddingBottom="18dp"
                android:paddingEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/custom_count_notify"

                />
            <ImageView

                android:scaleY="0.7"
                android:scaleX="0.7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/alarm"
                />
            <TextView
                android:textSize="11sp"
                android:paddingBottom="28dp"
                android:paddingEnd="25dp"
                android:layout_gravity="start|top"
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#ffff"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:id="@+id/lnuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUser"
            android:layout_gravity="center"
            android:background="@drawable/custom_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatar1"
            />
        <TextView
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:text="Nguyễn Thu Hương"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/imgUser"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlayout1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnuser"
            >
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="@drawable/customtab1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_weight="5"
    android:padding="10dp"
    >

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/lnicon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lnicon1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/lnicon1"
        app:layout_constraintRight_toRightOf="@+id/lnicon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hồ sơ bệnh án"
        app:layout_constraintTop_toBottomOf="@+id/lnicon1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="10dp"
                android:background="@drawable/customtab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="5">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/lnicon2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lnicon2"
                    />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="18dp"
                    android:paddingTop="3dp"
                    android:paddingHorizontal="10dp"
                    app:layout_constraintLeft_toLeftOf="@+id/lnicon2"
                    app:layout_constraintRight_toRightOf="@+id/lnicon2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liên hệ bác sĩ tư vấn"
                    app:layout_constraintTop_toBottomOf="@+id/lnicon2"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/lnlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lnlayout1"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/customtab3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="15dp"
                    >

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:id="@+id/lnicon3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lnicon3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="15dp"
                        app:layout_constraintLeft_toLeftOf="@+id/lnicon3"
                        app:layout_constraintRight_toRightOf="@+id/lnicon3"
                        android:gravity="center"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cập nhật kết quả xét nghiệm"
                        app:layout_constraintTop_toBottomOf="@+id/lnicon3"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_margin="10dp"
                    android:background="@drawable/customtab4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <ImageView
                        android:layout_marginTop="30dp"
                        android:id="@+id/lnicon4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lnicon4"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:paddingTop="4dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center"
                        android:layout_margin="18dp"
                        app:layout_constraintLeft_toLeftOf="@+id/lnicon4"
                        app:layout_constraintRight_toRightOf="@+id/lnicon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đặt lịch khám"
                        app:layout_constraintTop_toBottomOf="@+id/lnicon4"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cstlayout1"
                app:layout_constraintBottom_toBottomOf="parent"

    >
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tabckdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customln"
            >
        <TextView
            android:padding="20dp"
            android:id="@+id/btnCK"
            android:textStyle="bold"
            android:background="@drawable/custom_toprcv_left"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chuyên khoa"
            android:textColor="#000000"
            android:layout_weight="5"
            />
        <TextView
            android:padding="20dp"
            android:id="@+id/btnDv"
            android:background="@drawable/custom_toprcv_right"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dịch vụ"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="5"
            />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_search"
        android:background="@drawable/custom_rcvdv"
        android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
        android:layout_height="wrap_content"
        app:brv_text_no_result="Khong co ket qua nao het! Ahihi"
        app:brv_enable_refresh="false"
        >
    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <TextView
        android:id="@+id/tvtNoibat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabckdv"
        android:text="Nổi bật"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
                <HorizontalScrollView
                    android:layout_marginTop="20dp"
                    android:id="@+id/scvImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvtNoibat"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <ImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/group2"
                        />
                    <ImageView
                        android:layout_marginHorizontal="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/group2"
                        />
                    <ImageView
                        android:layout_marginHorizontal="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/group2"
                        />
                        <ImageView
                            android:layout_marginHorizontal="10dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/group2"
                            />
                        <ImageView
                            android:layout_marginHorizontal="10dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/group2"
                            />
                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/group2"
                            />
                    </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scvImage"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <ImageView
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ellipseno"
                        />
                    <ImageView
                        android:layout_marginHorizontal="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ellipseno"
                        />
                    <ImageView
                        android:layout_marginHorizontal="5dp"

                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ellipseyes"
                        />
                    <ImageView
                        android:layout_marginHorizontal="5dp"

                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ellipseno"
                        />
                    <ImageView
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ellipseno"
                        />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    </FrameLayout>

</layout>
